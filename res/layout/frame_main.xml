<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent">
	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="35.0dip"
		android:orientation="horizontal" 
		android:gravity="center_vertical">
     	<Button 
     		android:id="@+id/frame_btn_info"
     		style="@style/frame_button"
         	android:text="@string/frame_title_info"/>
     	<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline"/>
     	<Button 
     		android:id="@+id/frame_btn_train"
     		style="@style/frame_button"
         	android:text="@string/frame_title_train"/>
     	<ImageView android:layout_width="wrap_content" android:layout_height="fill_parent" android:background="@drawable/frame_button_cutline"/>
     	<Button 
     		android:id="@+id/frame_btn_other"
     		style="@style/frame_button"
         	android:text="@string/frame_title_other"/>
    </LinearLayout>
    
	<com.oapp.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_info"
	    style="@style/widget_listview"/>
	
	<com.oapp.widget.PullToRefreshListView
	  	android:id="@+id/frame_listview_train"
	    style="@style/widget_listview"
	    android:visibility="gone"/>
	
</LinearLayout>